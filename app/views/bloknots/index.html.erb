<h1>Listing bloknots</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nameofbkoknot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bloknots.each do |bloknot| %>
      <tr>
        <td><%= bloknot.NameOfBkoknot %></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Show', bloknot %></button></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_bloknot_path(bloknot) %></button></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Destroy', bloknot, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
      <tr class="span8">
        <td>
          <% if bloknot.missions.any? %>
            <p>Missions (<%= bloknot.missions.count %>)</p>
            <ol class="missions">
              <%= render bloknot.missions %>
            </ol>
          <% end %>
        </td>
      </tr> 
    <% end %>
  </tbody>

</table>

<br>

<button type="button" class="btn btn-success"><%= link_to 'New Bloknot', new_bloknot_path %></button>

<button type="button" class="btn btn-success"><%= link_to 'New Missions', new_mission_path %></button>

<button type="button" class="btn btn-success"><%= link_to 'Listing Missions', missions_path %></button>